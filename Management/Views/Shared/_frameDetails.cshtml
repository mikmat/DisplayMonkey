@model DisplayMonkey.Models.Frame

    <fieldset>
        <legend>@Resources.GeneralOptions</legend>

        <div class="divRow">
        <div class="display-label">
             @Resources.Canvas
        </div>
        <div class="display-field">
            @if (User.IsInRole("Admin"))
            {
                @Html.ActionLink(Model.Panel.Canvas.Name, "Details", "Canvas", new { id = Model.Panel.CanvasId }, null)
            }
            else
            {
                @Model.Panel.Canvas.Name
            }
            </div>
        </div>

        <div class="divRow">
        <div class="display-label">
             @Resources.Panel
        </div>
        <div class="display-field">
            @if (User.IsInRole("Admin"))
            {
                @Html.ActionLink(Model.Panel.Name, "Details", "Panel", new { id = Model.PanelId }, null)
            }
            else
            {
                @Model.Panel.Name
            }
            </div>
        </div>

        <div class="divRow">
        <div class="display-label">
             @Html.DisplayNameFor(model => model.Duration)
        </div>
        <div class="display-field">
            @Html.DisplayFor(model => model.Duration) @Resources.Sec
        </div>
        </div>

        <div class="divRow">
        <div class="display-label">
             @Html.DisplayNameFor(model => model.Template)
        </div>
        <div class="display-field">
            @Html.DisplayFor(model => model.Template.Name)
        </div>
        </div>

        <div class="divRow">
        <div class="display-label">
             @Html.DisplayNameFor(model => model.BeginsOn)
        </div>
        <div class="display-field">
            @Html.DisplayFor(model => model.BeginsOn)
        </div>
        </div>

        <div class="divRow">
        <div class="display-label">
             @Html.DisplayNameFor(model => model.EndsOn)
        </div>
        <div class="display-field">
            @Html.DisplayFor(model => model.EndsOn)
        </div>
        </div>
    
    </fieldset>
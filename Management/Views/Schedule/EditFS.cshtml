@model DisplayMonkey.Models.FullScreen

@{
    ViewBag.Title = Resources.EditFullScreenPanel;
}

<h2>@ViewBag.Title</h2>

@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()
    @Html.ValidationSummary(true)
    @Html.Referrer()

    <fieldset>
        <legend>@Resources.Panel</legend>

        @Html.HiddenFor(model => model.PanelId)

        <div class="editor-label">
            @Html.LabelFor(model => model.Canvas)
        </div>
        <div class="editor-field">
            @Html.HiddenFor(model => model.CanvasId)
            @Html.DisplayFor(model => model.Canvas.Name), @Html.DisplayFor(model => model.Canvas.Width) x @Html.DisplayFor(model => model.Canvas.Height) @Resources.Pixels
        </div>

        <div class="editor-label">
            @Html.LabelFor(model => model.MaxIdleInterval)
        </div>
        <div class="editor-field">
            @Html.EditorFor(model => model.MaxIdleInterval, new { htmlAttributes = new { @class = "duration" } }) @Resources.Sec
            @Html.ValidationMessageFor(model => model.MaxIdleInterval)
        </div>

        <div class="editor-label">
            @Html.LabelFor(model => model.FadeLength)
        </div>
        <div class="editor-field">
            @Html.EditorFor(model => model.FadeLength, new { htmlAttributes = new { @class = "duration" } }) @Resources.Sec
            @Html.ValidationMessageFor(model => model.FadeLength)
        </div>

        <p>
            <input type="submit" value="@Resources.Save" />
        </p>
    </fieldset>
}

<div>
    @Html.ActionLink(Resources.ViewPanels, "Index")
</div>

@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}

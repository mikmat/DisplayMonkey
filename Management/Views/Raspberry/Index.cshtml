
@model IEnumerable<DisplayMonkey.Models.Raspberry>

@{
    ViewBag.Title = "Displayer"; // Resources.Raspberrys;
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>@ViewBag.Title</h2>

<p>

</p>
<table class="grid">
    <tr>
        <th class="nw">
            @Html.DisplayNameFor(model => model.mac)
        </th>
        <th class="nw">
            @Html.DisplayNameFor(model => model.hostname)
        </th>
        <th class="nw">
            @Html.DisplayNameFor(model => model.ip)
        </th>
        <th class="nw">
            @Html.DisplayNameFor(model => model.updated)
        </th>
        <th class="nw">
            @Html.DisplayNameFor(model => model.temperature)
        </th>
        <th class="nw">
            @Html.DisplayNameFor(model => model.firstseen)
        </th>
        <th class="nw">
            @Html.DisplayNameFor(model => model.disabled)
        </th>
        <th></th>
    </tr>

    @foreach (var item in Model)
    {
        if (item.updated < DateTime.Now.AddMinutes(-30))
        {
            <tr class="raspbad">
                <td class="nw">
                    @Html.DisplayFor(modelItem => item.mac)
                </td>
                <td class="nw">
                    @Html.DisplayFor(modelItem => item.hostname)
                </td>
                <td class="nw">
                    @Html.DisplayFor(modelItem => item.ip)
                </td>
                <td class="nw">
                    @Html.DisplayFor(modelItem => item.updated)
                </td>
                <td class="nw">
                    @Html.DisplayFor(modelItem => item.temperature)
                </td>
                <td class="nw">
                    @Html.DisplayFor(modelItem => item.firstseen)
                </td>
                <td class="nw">
                    @Html.DisplayFor(modelItem => item.disabled)
                </td>

            </tr>
        }
        else
        {
            <tr>
                <td class="nw">
                    @Html.DisplayFor(modelItem => item.mac)
                </td>
                <td class="nw">
                    @Html.DisplayFor(modelItem => item.hostname)
                </td>
                <td class="nw">
                    @Html.DisplayFor(modelItem => item.ip)
                </td>
                <td class="nw">
                    @Html.DisplayFor(modelItem => item.updated)
                </td>
                <td class="nw">
                    @Html.DisplayFor(modelItem => item.temperature)
                </td>
                <td class="nw">
                    @Html.DisplayFor(modelItem => item.firstseen)
                </td>
                <td class="nw">
                    @Html.DisplayFor(modelItem => item.disabled)
                </td>

            </tr>
        }
    }

</table>
